<%= form_with url: login_path, method: :post do |f| %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit "ログイン", class: 'btn btn-block btn-primary' %>
  </div>
<% end %>