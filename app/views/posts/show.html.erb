<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.first_name %>
</p>

<% if @post.user_id == current_user.id %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Destroy', post_path(@post), method: :delete, data: { confirm: '削除しますか？'} %>
<% else %>
  <%= link_to 'Back', posts_path %>
<% end %>
